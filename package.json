{
  "name": "@salesforce/eslint-config-lwc",
  "version": "0.9.0",
  "main": "index.js",
  "license": "MIT",
  "description": "Opinionated ESLint configurations for LWC projects",
  "keywords": [
    "eslint",
    "eslint-config",
    "lwc",
    "salesforce"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,md}\"",
    "format:check": "prettier --check \"**/*.{js,md}\"",
    "lint": "eslint",
    "test": "mocha"
  },
  "dependencies": {
    "@lwc/eslint-plugin-lwc": "~0.11.0",
    "babel-eslint": "~10.1.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-jest": "~23.8.2",
    "eslint-restricted-globals": "~0.2.0"
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mocha": "^8.2.1",
    "prettier": "^2.1.2"
  },
  "peerDependencies": {
    "eslint": "^6 || ^7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce/eslint-config-lwc.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "lib",
    "base.js",
    "extended.js",
    "index.js",
    "recommended.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{js,md}": [
      "prettier --write"
    ]
  },
  "mocha": {
    "slow": 500
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
