{
  "name": "@salesforce/eslint-config-lwc",
  "version": "0.4.0",
  "main": "index.js",
  "license": "MIT",
  "description": "Opinionated ESLint configurations for LWC projects",
  "keywords": [
    "eslint",
    "eslint-config",
    "lwc",
    "salesforce"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,md}\"",
    "lint": "eslint",
    "test": "mocha"
  },
  "dependencies": {
    "@lwc/eslint-plugin-lwc": "^0.8.0",
    "babel-eslint": "^10.0.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-restricted-globals": "^0.2.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "prettier": "^1.19.1"
  },
  "peerDependencies": {
    "eslint": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce/eslint-config-lwc.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "lib",
    "base.js",
    "extended.js",
    "index.js",
    "recommended.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn format"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{js,md}": [
      "prettier --write"
    ]
  },
  "mocha": {
    "slow": 500
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
