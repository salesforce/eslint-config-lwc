{
  "name": "@salesforce/eslint-config-lwc",
  "version": "3.4.0",
  "main": "index.js",
  "license": "MIT",
  "description": "Opinionated ESLint configurations for LWC projects",
  "keywords": [
    "eslint",
    "eslint-config",
    "lwc",
    "salesforce"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,md}\"",
    "format:check": "prettier --check \"**/*.{js,md}\"",
    "lint": "eslint",
    "test": "mocha",
    "release:version": "npm version",
    "release:publish": "npm publish --registry=https://registry.npmjs.org"
  },
  "dependencies": {
    "@babel/core": "~7.21.0",
    "@babel/eslint-parser": "~7.19.1",
    "eslint-restricted-globals": "~0.2.0",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@lwc/eslint-plugin-lwc": "^1.6.2",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "eslint": "^8.34.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4"
  },
  "peerDependencies": {
    "@lwc/eslint-plugin-lwc": "^1.0.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "eslint": "^7 || ^8",
    "eslint-plugin-import": "*",
    "eslint-plugin-jest": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce/eslint-config-lwc.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "lib",
    "base.js",
    "extended.js",
    "i18n.js",
    "index.js",
    "recommended.js"
  ],
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{js,md}": [
      "prettier --write"
    ]
  },
  "mocha": {
    "slow": 500
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
