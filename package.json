{
  "name": "@salesforce/eslint-config-lwc",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "Opinionated ESLint configurations for LWC projects",
  "keywords": [
    "eslint",
    "eslint-config",
    "lwc",
    "salesforce"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,md}\"",
    "format:check": "prettier --check \"**/*.{js,md}\"",
    "lint": "eslint",
    "test": "mocha"
  },
  "dependencies": {
    "@babel/core": "~7.13.14",
    "@babel/eslint-parser": "~7.13.14",
    "eslint-restricted-globals": "~0.2.0"
  },
  "devDependencies": {
    "@lwc/eslint-plugin-lwc": "^1.0.0",
    "@salesforce/eslint-plugin-lightning": "^0.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1"
  },
  "peerDependencies": {
    "@lwc/eslint-plugin-lwc": "^1.0.0",
    "@salesforce/eslint-plugin-lightning": "^0.1.0",
    "eslint": "^6 || ^7",
    "eslint-plugin-import": "*",
    "eslint-plugin-jest": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce/eslint-config-lwc.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "lib",
    "base.js",
    "extended.js",
    "index.js",
    "recommended.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{js,md}": [
      "prettier --write"
    ]
  },
  "mocha": {
    "slow": 500
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
